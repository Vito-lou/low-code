{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "jsx": "react",
    "module": "commonjs",
    "target": "ES6",
    "allowJs": true,
    "checkJs": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@lowcode/*": ["./packages/*/src"]
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/src",
    "scripts/*",
    "rollup.*.js"
  ]
}
